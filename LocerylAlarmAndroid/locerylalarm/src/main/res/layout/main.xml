<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:background="#fff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.loceryl.locerylalarm.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/main_background"
        android:background="@drawable/tela1"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/main_background_width"
        android:layout_height="@dimen/main_background_height" />
    <RelativeLayout
        android:background="#000"
        android:id="@+id/main_date_setup"
        android:layout_alignTop="@id/main_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_date"
            android:text="12/12/2014"
            android:gravity="center"
            android:background="#fff"
            android:layout_centerVertical="true"
            android:onClick="showPicker"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:clickable="true" />
        <Button
            android:background="@drawable/btok"
            android:layout_toRightOf="@+id/main_date"
            android:onClick="startAlarm"
            android:layout_width="52dp"
            android:layout_height="40dp" />
    </RelativeLayout>
</RelativeLayout>