<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/works_layout"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.loceryl.locerylalarm.WorksActivity"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/works_background"
        android:background="@drawable/tela3"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/background_width"
        android:layout_height="@dimen/background_height" />

    <Button
        android:background="@drawable/btfechar"
        android:layout_alignTop="@id/works_background"
        android:layout_centerHorizontal="true"
        android:onClick="backToMain"
        android:layout_marginTop="@dimen/works_btfechar_margintop"
        android:layout_width="@dimen/works_btfechar_width"
        android:layout_height="@dimen/works_btfechar_height" />
</RelativeLayout>